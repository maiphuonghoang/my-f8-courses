    checkAllSubmitBtn.click(function (e) {
      console.log(1234)
      e.preventDefault()
      //khi  có quyền submit nghĩa là k có class disable 
      var isSubmittable = !$(this).hasClass('disabled')
      console.log("co quyen submit? " + isSubmittable)
      if (isSubmittable)
        containerForm.submit()
    })
    */
