<div class="mt-4">
    <h3> Cập nhật khóa học</h3>
    <form class="mt-4" method="POST" action="/courses/{{course._id}}?_method=PUT">
    {{!-- submit là POST nhưng nhận về phía router bên server là PUT 
        sử dụng express.js Resources Middleware  method-override 
    --}}
        <div class="form-group">
            <label for="name">Tên khóa học</label>
            <input type="text" name="name" class="form-control" value="{{course.name}}" id="name">
        </div>
        <div class="form-group">
            <label for="description">Mô tả</label>
            <textarea name="description" class="form-control" name="description" id="description">{{course.description}}</textarea>
            {{!-- textarea truyền qua children thay vì value như input --}}
        </div>
        <div class="form-group">
            <label for="videoId">Video</label>
            <input type="text" name="videoId" class="form-control" value="{{course.videoId}}" id="videoId">
        </div>
        <div class="form-group">
            <label for="level">Trình độ</label>
            <input type="text" name="level" class="form-control" value="{{course.level}}" id="level">
        </div>

        <button type="submit" class="btn btn-primary">Lưu lại</button>
    </form>
</div>
